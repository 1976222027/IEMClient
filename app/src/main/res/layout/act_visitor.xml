<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_visitor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VisitorActivity">

    <!-- 已到访，未到访tab设置-->
    <android.support.design.widget.TabLayout
        android:id="@+id/visitor_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/common_topbar_bgcolor"
        app:tabSelectedTextColor="@color/common_topbar_bgcolor"
        app:tabTextColor="@color/black"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/visitor_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/visitor_tab"
        android:background="@color/white">

    </android.support.v4.view.ViewPager>

</RelativeLayout>